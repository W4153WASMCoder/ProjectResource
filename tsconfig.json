{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node", // Change this line
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
